;
; BIND data file for local loopback interface
;
$TTL	604800
@ IN  SOA colte.colte. admin.colte. (
			      3		; Serial
			 604800		; Refresh
			  86400		; Retry
			2419200		; Expire
			 604800 )	; Negative Cache TTL
;

 IN  NS  colte.colte. ;N1

colte.colte.  IN  A 192.168.151.1 ;A1
network.colte.  IN  A 192.168.151.1 ;A2
home.colte.  IN  A 192.168.151.1
media.colte.  IN  A 192.168.151.1
maps.colte.  IN  A 192.168.151.1
omt.colte.  IN  A 192.168.151.1
xowa.colte.  IN  A 192.168.151.1
wiki.colte.  IN  A 192.168.151.1
chat.colte.  IN  A 192.168.151.1

