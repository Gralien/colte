# create oai_test user and database
sudo mysql -e "CREATE DATABASE oai_test;"
sudo mysql -e "CREATE USER oai_test@localhost;"
sudo mysql -e "GRANT ALL PRIVILEGES ON oai_test.* TO oai_test@localhost;"
sudo mysql -e "FLUSH PRIVILEGES;"

# import test database
mysql -u oai_test oai_test < /tmp/colte_db/sample_db.sql

echo "Installed CoLTE Test Database"