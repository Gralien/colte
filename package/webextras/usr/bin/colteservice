#!/bin/bash
BASEDIR="$( cd "$( dirname "${BASH_SOURCE[0]}" )" && pwd )"

version=0.9.0

echo "CoLTE Webservice Tool ($version)"

if [ "$EUID" -ne 0 ]; then
	echo "colteconf: Must run as root!"
	exit 1
fi

if [ "$#" -ne 2 ]; then
	echo "Usage: colteservice {install | remove} servicename"
	exit 1
fi

if [ "$1" = "install" ]; then
	ansible-playbook -v -i "localhost," -c local $BASEDIR/install_$1.yml
	exit 0
fi

if [ "$1" = "remove" ]; then
	echo "REMOVE NOT IMPLEMENTED YET"
	exit 0
fi

echo "Usage: colteservice {install | remove} servicename"
