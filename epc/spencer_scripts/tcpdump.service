[Unit]
Description=TCPDump all SCTP Traffic
After=multi-user.target network.target

[Service]
Type=simple
Environment="TCPDUMP_FORMAT=%%Y-%%m-%%d_%%H:%%M:%%S"
ExecStart=/usr/sbin/tcpdump -i enp3s0 -w '/var/log/colte/tcpdump/sctp_${TCPDUMP_FORMAT}.pcap' sctp
Restart=on-abort

[Install]
WantedBy=multi-user.target